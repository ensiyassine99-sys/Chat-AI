# AI CHATBOT - BACKEND CONFIGURATION
# ============================================
# Copy this file to .env and update the values

# ------------------------------------------
# Server Configuration
# ------------------------------------------
NODE_ENV=development
PORT=5000
HOST=localhost
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ------------------------------------------
# Google OAuth
# ------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=CHANGE_ME_SECRET
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# ------------------------------------------
# Twitter OAuth
# ------------------------------------------
TWITTER_CONSUMER_KEY=your-twitter-api-key
TWITTER_CONSUMER_SECRET=your-twitter-api-secret
TWITTER_CALLBACK_URL=http://localhost:5000/api/v1/auth/twitter/callback

# ------------------------------------------
# Database Configuration
# ------------------------------------------
DATABASE_URL=sqlite:./database/chatbot.db

# PostgreSQL (if needed)
# DB_DIALECT=postgres
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=chatbot_db
# DB_USER=chatbot_user
# DB_PASSWORD=CHANGE_ME_SECRET
# DB_SSL=false

# ------------------------------------------
# Redis Configuration
# ------------------------------------------
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ------------------------------------------
# JWT & Security
# ------------------------------------------
JWT_SECRET=CHANGE_ME_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_SECRET
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Bcrypt
BCRYPT_ROUNDS=10

# Session & Cookies
SESSION_SECRET=CHANGE_ME_SECRET
COOKIE_SECRET=CHANGE_ME_SECRET
COOKIE_SECURE=false

# ------------------------------------------
# AI Models API Keys
# ------------------------------------------
# OpenAI
OPENAI_API_KEY=

# Google AI
GOOGLE_AI_API_KEY=CHANGE_ME_SECRET

# Hugging Face
HUGGINGFACE_API_KEY=CHANGE_ME_SECRET

# DeepSeek
DEEPSEEK_API_KEY=CHANGE_ME_SECRET
DEEPSEEK_API_URL=https://openrouter.ai/api/v1

# ------------------------------------------
# Email Configuration
# ------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=CHANGE_ME_SECRET
EMAIL_FROM="AI Chatbot <noreply@example.com>"

# ------------------------------------------
# Rate Limiting
# ------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=15

# ------------------------------------------
# File Upload
# ------------------------------------------
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ------------------------------------------
# Logging
# ------------------------------------------
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# ------------------------------------------
# Monitoring
# ------------------------------------------
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# ------------------------------------------
# Feature Flags
# ------------------------------------------
ENABLE_SIGNUP=true
ENABLE_OAUTH=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_WEBSOCKET=true
ENABLE_FILE_UPLOAD=true
ENABLE_EXPORT=true

# ------------------------------------------
# API Limits
# ------------------------------------------
MAX_CHAT_HISTORY=100
MAX_MESSAGE_LENGTH=4000
MAX_MESSAGES_PER_CHAT=1000
MAX_CHATS_PER_USER=500